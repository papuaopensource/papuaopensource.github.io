---
import { Image } from "astro:assets";
import HeroImage from "@/assets/images/home-open-source-ilustration.svg";

import Layout from "@/layouts/Layout.astro";
import Link from "@/components/Link.astro";

import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import {
  Card,
  CardHeader,
  CardTitle,
  CardDescription,
  CardContent,
  CardFooter,
} from "@/components/ui/card";

import { ArrowRight, Code, Github, RefreshCw, Share2 } from "lucide-react";
---

<Layout
  title="Kolaborasi Open Source untuk Tanah Papua"
  description="Papua Open Source memfasilitasi kontribusi bersama memajukan perkembangan teknologi di Tanah Papua melalui kolaborasi berbasis Open Source."
>
  <div class="min-h-screen bg-white">
    {/* Hero Section */}
    <section class="max-w-screen-xl mx-auto px-4 py-12 md:py-24">
      <div class="grid grid-cols-1 gap-8 lg:grid-cols-2 lg:gap-12 items-center">
        <div class="space-y-6">
          <Badge className="mb-2">Komunitas Open Source</Badge>
          <h1
            class="text-4xl font-bold tracking-tighter sm:text-5xl md:text-6xl"
          >
            Kolaborasi Open Source untuk Tanah Papua
          </h1>
          <p
            class="text-gray-500 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
          >
            Papua Open Source memfasilitasi kontribusi bersama memajukan
            perkembangan teknologi di Tanah Papua melalui kolaborasi berbasis
            Open Source.
          </p>
          <div class="flex flex-col gap-2 min-[400px]:flex-row">
            <Button size="lg" variant="default" className="h-12">
              <Link href="/kontribusi">Mulai Berkontribusi</Link>
            </Button>
            <Button size="lg" variant="outline" className="h-12">
              <Link href="/kontak">Hubungi Kami</Link>
            </Button>
          </div>
        </div>
        <div>
          <Image
            src={HeroImage}
            alt="About - Open Source Illustration"
            width={600}
            height={400}
            class="rounded-lg object-cover mx-auto"
          />
        </div>
      </div>
    </section>

    {/* Principles Section */}
    <section id="prinsip" class="bg-slate-50 px-4 py-12 md:px-8 md:py-24">
      <div class="max-w-screen-xl flex flex-col mx-auto space-y-12">
        <div class="space-y-4 text-center">
          <h2
            class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl"
          >
            Prinsip Kami
          </h2>
          <p
            class="mx-auto max-w-[700px] text-gray-500 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
          >
            Tiga prinsip utama yang menjadi landasan komunitas Papua Open Source
          </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <Card className="bg-white shadow-none">
            <CardHeader className="pb-2">
              <div
                class="flex items-center justify-center w-12 h-12 rounded-full bg-primary/10 text-primary mb-4"
              >
                <Share2 className="h-6 w-6" />
              </div>
              <CardTitle>Share</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-gray-500">
                Mendistribusikan kode sumber ke publik, membuka akses
                pengetahuan untuk semua.
              </p>
            </CardContent>
          </Card>
          <Card className="bg-white shadow-none">
            <CardHeader className="pb-2">
              <div
                class="flex items-center justify-center w-12 h-12 rounded-full bg-primary/10 text-primary mb-4"
              >
                <Code className="h-6 w-6" />
              </div>
              <CardTitle>Improve</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-gray-500">
                Modifikasi atau perbaikan kode untuk kualitas lebih baik, terus
                mengembangkan solusi.
              </p>
            </CardContent>
          </Card>
          <Card className="bg-white shadow-none">
            <CardHeader className="pb-2">
              <div
                class="flex items-center justify-center w-12 h-12 rounded-full bg-primary/10 text-primary mb-4"
              >
                <RefreshCw className="h-6 w-6" />
              </div>
              <CardTitle>Repeat</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-gray-500">
                Teruskan siklus berbagi dan perbaikan untuk perkembangan
                berkelanjutan.
              </p>
            </CardContent>
          </Card>
        </div>
      </div>
    </section>

    {/* Projects Preview Section */}
    <section class="px-4 py-12 md:px-8 md:py-24">
      <div class="max-w-screen-xl flex flex-col mx-auto space-y-12">
        <div class="space-y-4">
          <h2
            class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl"
          >
            Proyek Populer
          </h2>
          <p
            class="max-w-[700px] text-gray-500 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
          >
            Temukan proyek-proyek open source yang populer dan berdampak bagi
            Tanah Papua, hasil dari kolaborasi bersama.
          </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {/* Project 1 */}
          <Card className="flex flex-col h-full shadow-none">
            <CardHeader>
              <CardTitle>Dapoer Papoea</CardTitle>
              <CardDescription>
                Proyek yang bertujuan untuk mendokumentasikan dan mempopulerkan
                resep-resep kuliner khas Papua.
              </CardDescription>
            </CardHeader>
            <CardFooter className="mt-auto pt-6">
              <Button variant="outline" className="w-full">
                <Link
                  href="https://github.com/papua-opensource/dapoer-papoea"
                  target="_blank"
                  class="flex items-center justify-center gap-2"
                >
                  <Github className="h-4 w-4" />
                  <span>Repository GitHub</span>
                </Link>
              </Button>
            </CardFooter>
          </Card>

          {/* Project 2 */}
          <Card className="flex flex-col h-full shadow-none">
            <CardHeader>
              <CardTitle>Kamus Bahasa Moy - Website</CardTitle>
              <CardDescription
                >Web App - Kamus digital untuk melestarikan bahasa Moy dari
                Jayapura.</CardDescription
              >
            </CardHeader>
            <CardFooter className="mt-auto pt-6">
              <Button variant="outline" className="w-full">
                <Link
                  href="https://github.com/papua-opensource/kamus-bahasa-moy-website"
                  target="_blank"
                  class="flex items-center justify-center gap-2"
                >
                  <Github className="h-4 w-4" />
                  <span>Repository GitHub</span>
                </Link>
              </Button>
            </CardFooter>
          </Card>

          {/* Project 3 */}
          <Card className="flex flex-col h-full shadow-none">
            <CardHeader>
              <CardTitle>Kamus Bahasa Moy - Mobile</CardTitle>
              <CardDescription>
                Mobile App - Kamus digital untuk melestarikan bahasa Moy dari
                Jayapura.
              </CardDescription>
            </CardHeader>
            <CardFooter className="mt-auto pt-6">
              <Button variant="outline" className="w-full">
                <Link
                  href="https://github.com/papua-opensource/kamus-bahasa-moy-mobile"
                  target="_blank"
                  class="flex items-center justify-center gap-2"
                >
                  <Github className="h-4 w-4" />
                  <span>Repository GitHub</span>
                </Link>
              </Button>
            </CardFooter>
          </Card>
        </div>
        <div class="flex justify-center">
          <Button variant="outline" className="gap-2">
            <Link
              href="https://github.com/orgs/papua-opensource/repositories"
              target="_blank"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-2"
            >
              <span>Lihat Semua Proyek</span>
              <ArrowRight className="h-4 w-4" />
            </Link>
          </Button>
        </div>
      </div>
    </section>
  </div>
</Layout>
