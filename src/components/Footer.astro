---
import { Button } from "@/components/ui/button";
import Link from "@/components/Link.astro";

import { Github, Instagram, Twitter } from "lucide-react";
---

<footer class="border-t px-4 py-6 md:px-8 md:py-8">
  <div
    class="max-w-screen-xl flex flex-col mx-auto gap-4 md:flex-row md:items-center md:justify-between"
  >
    <div class="flex items-center gap-2 text-sm">
      <span>Â© 2025 Papua Open Source.</span>
    </div>
    <div class="flex gap-8">
      <Button variant="ghost" size="icon" asChild>
        <Link
          href="https://github.com/papuaopensource"
          target="_blank"
          rel="noopener noreferrer"
        >
          <Github className="h-4 w-4" />
          <span class="sr-only">GitHub</span>
        </Link>
      </Button>
      <Button variant="ghost" size="icon" asChild>
        <Link
          href="https://instagram.com/papuaopensource"
          target="_blank"
          rel="noopener noreferrer"
        >
          <Instagram className="h-4 w-4" />
          <span class="sr-only">Instagram</span>
        </Link>
      </Button>
      <Button variant="ghost" size="icon" asChild>
        <Link
          href="https://x.com/papuaopensource"
          target="_blank"
          rel="noopener noreferrer"
        >
          <Twitter className="h-4 w-4" />
          <span class="sr-only">Twitter/X</span>
        </Link>
      </Button>
    </div>
  </div>
</footer>
